 <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
    android:layout_height="match_parent">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/linearLayout3"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_optimizationLevel="standard">

		<com.google.android.material.textview.MaterialTextView
			android:id="@+id/achiev_1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="4dp"
			android:text="@string/a1"
			android:textSize="24sp"
			app:fontFamily="@font/opensans_medium"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_chainStyle="packed" />

		<com.google.android.material.progressindicator.LinearProgressIndicator
			android:id="@+id/achiev_1_progress"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintBottom_toTopOf="@+id/achiev_1_sub"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/achiev_1" />

		<com.google.android.material.textview.MaterialTextView
			android:id="@+id/achiev_1_sub"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="1dp"
			android:text="@string/a1sub"
			android:textSize="14sp"
			app:fontFamily="@font/opensans_regular"
			app:layout_constraintBottom_toTopOf="@+id/get_prize_1"
			app:layout_constraintStart_toStartOf="@+id/achiev_1_progress"
			app:layout_constraintTop_toBottomOf="@+id/achiev_1_progress" />

		<com.google.android.material.button.MaterialButton
			android:id="@+id/get_prize_1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="28dp"
			android:enabled="false"
			android:text="@string/get_prize"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.947"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/achiev_1" />

		<com.google.android.material.textview.MaterialTextView
			android:id="@+id/achiev_2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/a2"
			android:textSize="24sp"
			app:fontFamily="@font/opensans_medium"
			app:layout_constraintBottom_toTopOf="@+id/achiev_2_progress"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/get_prize_1" />

		<com.google.android.material.progressindicator.LinearProgressIndicator
			android:id="@+id/achiev_2_progress"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintBottom_toTopOf="@+id/achiev_2_sub"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/achiev_2" />

		<com.google.android.material.textview.MaterialTextView
			android:id="@+id/achiev_2_sub"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="1dp"
			android:text="@string/a2sub"
			android:textSize="14sp"
			app:fontFamily="@font/opensans_regular"
			app:layout_constraintBottom_toTopOf="@+id/get_prize_2"
			app:layout_constraintStart_toStartOf="@+id/achiev_2_progress"
			app:layout_constraintTop_toBottomOf="@+id/achiev_2_progress" />

		<com.google.android.material.button.MaterialButton
			android:id="@+id/get_prize_2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:enabled="false"
			android:text="@string/get_prize"
			app:layout_constraintBottom_toTopOf="@+id/achiev_3"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.947"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/achiev_2_sub" />

		<com.google.android.material.textview.MaterialTextView
			android:id="@+id/achiev_3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/a3"
			android:textSize="24sp"
			app:fontFamily="@font/opensans_medium"
			app:layout_constraintBottom_toTopOf="@+id/achiev_3_progress"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/get_prize_2" />

		<com.google.android.material.progressindicator.LinearProgressIndicator
			android:id="@+id/achiev_3_progress"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintBottom_toTopOf="@+id/achiev_3_sub"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/achiev_3" />

		<com.google.android.material.textview.MaterialTextView
			android:id="@+id/achiev_3_sub"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/a3sub"
			android:textSize="14sp"
			app:fontFamily="@font/opensans_regular"
			app:layout_constraintBottom_toTopOf="@+id/get_prize_3"
			app:layout_constraintStart_toStartOf="@+id/achiev_3_progress"
			app:layout_constraintTop_toBottomOf="@+id/achiev_3_progress" />

		<com.google.android.material.button.MaterialButton
			android:id="@+id/get_prize_3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:enabled="false"
			android:text="@string/get_prize"
			app:layout_constraintBottom_toTopOf="@+id/achiev_4"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.947"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/achiev_3_sub" />

		<com.google.android.material.textview.MaterialTextView
			android:id="@+id/achiev_4"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/a4"
			android:textSize="24sp"
			app:fontFamily="@font/opensans_medium"
			app:layout_constraintBottom_toTopOf="@+id/achiev_4_progress"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/get_prize_3" />

		<com.google.android.material.progressindicator.LinearProgressIndicator
			android:id="@+id/achiev_4_progress"
			android:layout_width="408dp"
			android:layout_height="2dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/achiev_4" />

		<com.google.android.material.textview.MaterialTextView
			android:id="@+id/achiev_4_sub"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/a4sub"
			android:textSize="14sp"
			app:fontFamily="@font/opensans_regular"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/achiev_4_progress" />

		<com.google.android.material.button.MaterialButton
			android:id="@+id/get_prize_4"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:enabled="false"
			android:text="@string/get_prize"
			app:layout_constraintBottom_toTopOf="@+id/shop_title"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.947"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/achiev_4_sub" />

		<com.google.android.material.textview.MaterialTextView
			android:id="@+id/shop_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:gravity="center"
			android:text="NShop"
			android:textSize="25sp"
			app:fontFamily="@font/opensans_medium"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.498"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/get_prize_4" />

		<com.google.android.material.textview.MaterialTextView
			android:id="@+id/coins"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:gravity="center"
			android:text="@string/coins"
			android:textSize="18sp"
			app:fontFamily="@font/opensans_medium"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/shop_title" />

		<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guideline8"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			app:layout_constraintGuide_begin="769dp" />

		<com.google.android.material.card.MaterialCardView
			android:id="@+id/random_cat_card"
			style="@style/Widget.Material3.CardView.Elevated"
			android:layout_width="120dp"
			android:layout_height="140dp"
			app:cardCornerRadius="16dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/coins">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<ImageView
					android:id="@+id/random_cat_icon"
					android:layout_width="match_parent"
					android:layout_height="99dp" />

				<TextView
					android:id="@+id/textView4"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal"
					android:text="@string/random_cat"
					android:textSize="13sp" />

				<TextView
					android:id="@+id/textView5"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal"
					android:text="150 NCoins" />
			</LinearLayout>
		</com.google.android.material.card.MaterialCardView>

		<com.google.android.material.card.MaterialCardView
			android:id="@+id/mystery_box_card"
			style="@style/Widget.Material3.CardView.Elevated"
			android:layout_width="120dp"
			android:layout_height="140dp"
			app:cardCornerRadius="16dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/coins">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<ImageView
					android:id="@+id/mystery_box_icon"
					android:layout_width="match_parent"
					android:layout_height="99dp"
					android:src="@drawable/ic_mystery_box" />

				<TextView
					android:id="@+id/item"
					android:layout_width="match_parent"
					android:layout_height="20dp"
					android:gravity="center_horizontal"
					android:text="@string/mystery_box"
					android:textSize="13sp" />

				<TextView
					android:id="@+id/textView6"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal"
					android:text="300 NCoins" />
			</LinearLayout>
		</com.google.android.material.card.MaterialCardView>

	</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
