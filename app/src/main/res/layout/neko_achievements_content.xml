 <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"> 		
	<com.google.android.material.textview.MaterialTextView
	  android:id="@+id/achiev_1"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
	  android:layout_marginStart="10dp"
	  android:textSize="24sp"
      android:text="@string/a1"
	  app:fontFamily="@font/opensans_medium"/> 
	  
	 <Space
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_weight="0" />   
	  
	<com.google.android.material.progressindicator.LinearProgressIndicator
    android:layout_width="match_parent"
	android:layout_marginStart="10dp"
	android:id="@+id/achiev_1_progress"
	android:layout_marginEnd="10dp"
    android:layout_height="wrap_content" />
	
	<com.google.android.material.textview.MaterialTextView
	  android:id="@+id/achiev_1_sub"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
	  android:layout_marginStart="5dp"
	  android:textSize="14sp"
      android:text="@string/a1sub" 
	  app:fontFamily="@font/opensans_regular"/> 
	  
	 <com.google.android.material.button.MaterialButton
        android:id="@+id/get_prize_1"
        android:layout_width="wrap_content"
		android:enabled="false"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/get_prize"/>  
		
	 <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="0" /> 
		
	<com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>	
	 <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="0" />	
		
	<com.google.android.material.textview.MaterialTextView
	  android:id="@+id/achiev_2"
      android:layout_height="wrap_content"
	  android:layout_marginStart="10dp"
      android:layout_width="wrap_content"
	  android:textSize="24sp"
      android:text="@string/a2" 
	  app:fontFamily="@font/opensans_medium"/> 
	 <Space
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_weight="0" />   
	  
	<com.google.android.material.progressindicator.LinearProgressIndicator
    android:layout_width="match_parent"
	android:layout_marginStart="10dp"
	android:id="@+id/achiev_2_progress"
	android:layout_marginEnd="10dp"
    android:layout_height="wrap_content" />
	
	<com.google.android.material.textview.MaterialTextView
	  android:id="@+id/achiev_2_sub"
      android:layout_height="wrap_content"
	  android:layout_marginStart="5dp"
      android:layout_width="wrap_content"
	  android:textSize="14sp"
      android:text="@string/a2sub"  
	  app:fontFamily="@font/opensans_regular"/> 
	  
	 <com.google.android.material.button.MaterialButton
        android:id="@+id/get_prize_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:enabled="false"
        android:layout_gravity="center"
        android:text="@string/get_prize"/>   
		
	<Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="0" /> 
		
	<com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>	
		
	 <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="0" />	
		
    <com.google.android.material.textview.MaterialTextView
	  android:id="@+id/achiev_3"
      android:layout_height="wrap_content"
	  android:layout_marginStart="10dp"
      android:layout_width="wrap_content"
	  android:textSize="24sp"
      android:text="@string/a3" 
	  app:fontFamily="@font/opensans_medium"/> 
	 <Space
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_weight="0" />    
	  
	<com.google.android.material.progressindicator.LinearProgressIndicator
    android:layout_width="match_parent"
	android:layout_marginStart="10dp"
	android:layout_marginEnd="10dp"
	android:id="@+id/achiev_3_progress"
    android:layout_height="wrap_content" />
	
	<com.google.android.material.textview.MaterialTextView
	  android:id="@+id/achiev_3_sub"
      android:layout_height="wrap_content"
	  android:layout_marginStart="5dp"
      android:layout_width="wrap_content"
	  android:textSize="14sp"
      android:text="@string/a3sub"  
	  app:fontFamily="@font/opensans_regular"/> 
	  
	 <com.google.android.material.button.MaterialButton
        android:id="@+id/get_prize_3"
		android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/get_prize"/>  
	  
	 <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="0" /> 
		
	<com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>	
		
	 <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="0" />	
		
	 <com.google.android.material.textview.MaterialTextView
	  android:id="@+id/achiev_4"
      android:layout_height="wrap_content"
	  android:layout_marginStart="10dp"
      android:layout_width="wrap_content"
	  android:textSize="24sp"
      android:text="@string/a4" 
	  app:fontFamily="@font/opensans_medium"/> 
	 <Space
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_weight="0" />  	  
	<com.google.android.material.progressindicator.LinearProgressIndicator
    android:layout_width="match_parent"
	android:layout_marginStart="10dp"
	android:layout_marginEnd="10dp"
	android:id="@+id/achiev_4_progress"
    android:layout_height="wrap_content" />
	
	<com.google.android.material.textview.MaterialTextView
	  android:id="@+id/achiev_4_sub"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
	  android:layout_marginStart="5dp"
	  android:textSize="14sp"
      android:text="@string/a4sub"  
	  app:fontFamily="@font/opensans_regular"/> 
	  
	 <com.google.android.material.button.MaterialButton
        android:id="@+id/get_prize_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
		android:enabled="false"
        android:text="@string/get_prize"/>

	 <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="0" /> 
		
	<com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>	
	 <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="0" />

	<com.google.android.material.textview.MaterialTextView
	  android:id="@+id/shop_title"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
	  android:gravity="center"
	  android:textSize="25sp"
      android:text="NShop"  
	  app:fontFamily="@font/opensans_medium"/>	
	<Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0" />
		
	<com.google.android.material.textview.MaterialTextView
	  android:id="@+id/coins"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
	  android:gravity="center"
	  android:textSize="18sp"
      android:text="@string/coins"
	  app:fontFamily="@font/opensans_medium"/>  
	<Space
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0" /> 
		
	<com.google.android.material.progressindicator.CircularProgressIndicator
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
	android:layout_gravity="center"
	android:indeterminate="true"/>  
</LinearLayout>
</ScrollView>
